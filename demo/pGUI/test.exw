--
-- general scratch area
--

include pGUI.e
procedure main()
Ihandle test, dlg

    IupOpen()

    /*Canvas*/
    test = IupCanvas(NULL);
    IupSetAttribute(test, "BGCOLOR", "255 127 127");
    IupSetAttribute(test, "CURSOR", "CROSS");
    IupSetAttribute(test, "SIZE", "100x100");
    IupSetAttribute(test, "SCROLLBAR", "YES");
    IupSetAttribute(test, "XAUTOHIDE", "NO");
    IupSetAttribute(test, "YAUTOHIDE", "NO");
    IupSetAttribute(test, "XMAX", "200");
    IupSetAttribute(test, "YMAX", "200");

    /*Dialog box*/
    dlg = IupDialog(IupVbox({test}));
    IupSetAttribute(dlg, "TITLE", "scrollbar");
    IupSetAttribute(dlg, "MARGIN", "10x10");
    IupSetAttribute(dlg, "MINBOX", "NO");
    IupSetAttribute(dlg, "MAXBOX", "NO");
    IupSetAttribute(dlg, "RESIZE", "NO");
    IupShowXY(dlg, IUP_CENTER, IUP_CENTER);

    /*Run program*/
    IupMainLoop ();

    /*Done*/
    IupClose ();
end procedure
main()

