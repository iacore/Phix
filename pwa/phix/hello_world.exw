include pGUI.e

IupOpen()
Ihandle lbl = IupFlatLabel("World","EXPAND=YES, ALIGNMENT=ACENTER")
Ihandln dlg = IupDialog(lbl,`TITLE="Hello", MINSIZE=225x75`)
IupCloseOnEscape(dlg)

IupShow(dlg)
if platform()!=WEB then
    IupMainLoop()
    dlg = IupDestroy(dlg)
    IupClose()
end if
